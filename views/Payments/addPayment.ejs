<%- include('../../Includes/begin.ejs') %>

<link rel="stylesheet" href="../../CSS/admin-dashboard.css">

<div class="container-fluid">

    <div id="wrapper">

        <%- include('../../Includes/admin_nav.ejs') %>

        <section id="content-wrapper">
            <main role="main" class="pt-5 main">

                <div class="main-content">
                    <div class="header pb-4 pb-sm-8 pt-5 pt-lg-8 d-flex align-items-center"
                        style="height: 100px; background-size: cover; background-position: center top;"> 
                    </div>
                    <div class="container-fluid mt--7">
                        <div class="row">
                            <div class="col-xl-12 order-xl-1">
                                <div class="card bg-secondary shadow">
                                    <div class="card-header bg-white border-0">
                                        <div class="row align-items-center">
                                            <div class="col-8">
                                                <h3 class="mb-0" style="color: brown;">ADD NEW PAYMENT</h3>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <%- include('../../Includes/messages') %>
                                        <form action="/admin/addPayment" method="POST">
                                          <h6 class="heading-small text-muted mb-4">Payment Information</h6>
                                          <div class="pl-lg-4">
                                            <div class="row">
                                              <div class="col-lg-6">
                                                <div class="form-group">
                                                  <label class="form-control-label" for="studentID">Select Student</label>
                                                  <select class="form-control form-control-alternative" id="studentID" name="studentID" required>
                                                    <% students.forEach(function(student) { %>
                                                      <option value="<%= student.StudentID %>"><%= student.StudentName %></option>
                                                    <% }); %>
                                                  </select>
                                                </div>
                                              </div>
                                              <div class="col-lg-6">
                                                <div class="form-group">
                                                  <label class="form-control-label" for="amount">Payment Amount</label>
                                                  <input type="number" id="amount" name="amount" class="form-control form-control-alternative" placeholder="Amount" required>
                                                </div>
                                              </div>
                                            </div>
                                            <div class="row">
                                              <div class="col-lg-6">
                                                <div class="form-group">
                                                  <label class="form-control-label" for="paymentDate">Payment Date</label>
                                                  <input type="date" id="paymentDate" name="paymentDate" class="form-control form-control-alternative" required>
                                                </div>
                                              </div>
                                            </div>
                                          </div>
                                          <button type="submit" class="btn btn-primary btn-block">ADD PAYMENT</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </main>
        </section>

    </div>

</div>

<%- include('../../Includes/admin_end.ejs') %>
